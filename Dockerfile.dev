FROM node:20-alpine

WORKDIR /app

# Copiar apenas os manifests primeiro (cache inteligente)
COPY package*.json ./

# Instalar dependências
RUN npm install

# Copiar o resto do código (para build inicial, mesmo que volume sobrescreva depois)
COPY . .

# Expor porta
EXPOSE 3000

# Rodar Next.js em modo dev
CMD ["npm", "run", "dev"]
